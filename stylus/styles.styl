$fa-font-path = '~font-awesome-stylus/fonts'

@import url('https://fonts.googleapis.com/css?family=Montserrat')

@import '~font-awesome-stylus/index'
@import 'mixins'
@import 'colors'

$widgetWidth = 38vw

*
  box-sizing: border-box

html
  font-family: 'Montserrat', Arial, sans-serif
  font-weight: 300
  font-size: 24px
  text-rendering: optimizeLegibility
  background-color: #000
  color: #fff

body
  margin: 0
  padding: 0

h5
  font-size: 0.8em
  font-weight: normal
  margin: 5px 0

h4
  font-size: 0.7em
  font-weight: bold
  text-transform: uppercase

.app
  display: flex
  flex-direction: row
  justify-content: space-between
  border: 3px solid transparent
  margin: 33px 3px
  height: calc(100vh - 66px)

  &.hotword
    border: 3px solid $activeBorderColor

.left, .right
  display: flex
  flex-direction: column
  box-sizing: border-box
  height: 100%
  width: 50vw

.left
  align-self: flex-start

.right
  align-items: flex-end
  align-self: flex-end

.widget
  background: #111
  padding: 15px
  margin-bottom: 10px
  border-radius: 4px
  width: $widgetWidth
  transition: all 200ms ease

  &.widget-bottom
    margin-top: auto
    margin-bottom: 0
    align-self: flex-end

  &.widget-active
    position: absolute
    z-index: 5
    left: 50%
    margin-left: -35vw
    top: 50%
    margin-top: -35vw
    width: 70vw
    // height: 70vw
    border: 3px solid $activeBorderColor

.progress-bar
  position: relative
  border: 1px solid $white
  background: transparent
  height: 35px

  .complete
    position: absolute
    background: $citibikeBlue
    height: 100%
    width: 50%

@import 'components/*'

.left > div,
.right > div
  &:not(:first-child)
    margin-top: 25px

#error, #main
  position: absolute
  bottom: 0
  width: 100%
  text-align: center

  i
    color: red
    margin-right: 5px
