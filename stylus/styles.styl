@import 'mixins'
@import 'colors'

html
  font-family: 'Open Sans', Arial, sans-serif
  font-weight: 300
  font-size: 24px
  background-color: #000
  color: #fff

body
  margin: 0
  padding: 0

h5
  font-size: 0.5em
  text-transform: uppercase
  margin: 5px 0
  border-bottom: 1px solid white

.left, .right
  display: flex
  flex-direction: column
  box-sizing: border-box
  padding: 0px 5px 5px 5px
  height: 100vh
  width: 50%
  position: relative

.left
  float: left

.right
  float: right

@import 'components/*'

.left > div,
.right > div
  clearfix()

  &:not(:first-child)
    margin-top: 25px

#error, #main
  position: absolute
  bottom: 0
  width: 100%
  text-align: center

  i
    color: red
    margin-right: 5px
