@import '~react-grid-layout/css/styles.css'
@import '~react-resizable/css/styles.css'
@import 'mixins'
@import 'colors'

*
  box-sizing: border-box

html
  font-family: 'Open Sans', Arial, sans-serif
  font-weight: 300
  font-size: 24px
  background-color: #000
  color: #fff

body
  margin: 0
  padding: 0

h5
  font-size: 0.8em
  font-weight: normal
  margin: 5px 0

#mirror
  border: 3px solid transparent
  margin: 5px
  padding: 0 5px
  height: 100%

  &.hotword
    border: 3px solid magenta

.widget
  background: #111
  padding: 15px
  border-radius: 4px

.progress-bar
  position: relative
  border: 1px solid $white
  background: transparent
  height: 35px

  .complete
    position: absolute
    background: $citibikeBlue
    height: 100%
    width: 50%

@import 'components/*'

.left > div,
.right > div
  &:not(:first-child)
    margin-top: 25px

#error, #main
  position: absolute
  bottom: 0
  width: 100%
  text-align: center

  i
    color: red
    margin-right: 5px
