@import 'mixins'
@import 'colors'

@import url('https://fonts.googleapis.com/css?family=Press+Start+2P')

html
  font-family: 'Press Start 2P', Arial, sans-serif
  background-color: #000
  color: #fff
  margin: 20px

@import subway

h3
  text-align: center
  font-size: 20px

.times
  margin: 0 auto
  list-style: none
  padding-left: 0

  li
    padding-bottom: 10px
    position: relative

.arrival-time
  display: inline-block
  margin-left: 10px
  height: 25px
  vertical-align: middle

.status
  font-family: Helvetica, Arial, sans-serif
  margin-top: 20px

  a
    display: block
    margin: 5px 0

  span,
  .plannedWorkDetail
    display: none
