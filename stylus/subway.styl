@require 'mixins'
@require 'colors'

.subway
  border-radius(50%)
  background-color: $gray
  color: $white
  display: inline-block
  font-size: 16px
  font-weight: bold
  height: 25px
  text-align: center
  width: 25px

  .route-number
    position: absolute
    background-color: transparent
    bottom: 21px
    left: 5px

.subway-1,
.subway-2,
.subway-3
  background-color: $red


.subway-4,
.subway-5,
.subway-6
  background-color: $green
