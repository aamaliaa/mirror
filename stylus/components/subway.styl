@require 'mixins'
@require 'colors'

#subway
  width: 100%
  float: right

  .message
    text-align: right

  .text, .subway
    display: inline-block
    vertical-align: middle

  .text
    margin-left: 5px

  .times
    margin: 0 auto
    list-style: none
    padding-left: 0

    li
      padding-bottom: 10px
      position: relative

  .arrival-time
    display: inline-block
    margin-left: 10px
    height: 25px
    vertical-align: middle

.subway
  font-family: Helvetica, sans-serif;
  border-radius(50%)
  background-color: $gray
  color: $white
  display: inline-block
  font-size: 16px
  font-weight: bold
  height: 25px
  line-height: 26px;
  text-align: center
  width: 25px

.subway-1,
.subway-2,
.subway-3
  background-color: $red

.subway-A,
.subway-C,
.subway-E
  background-color: $blue

.subway-B,
.subway-D,
.subway-F,
.subway-M
  background-color: $orange

.subway-4,
.subway-5,
.subway-6
  background-color: $green
