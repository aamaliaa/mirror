.widget-mtastatus
  display: flex
  flex-direction: column

  h5
    .time
      float: right
      font-size: 0.7em
      font-style: italic
      color: #777
      margin-left: 5px
      vertical-align: middle
      font-weight: normal
      text-transform: lowercase

  a
    display: block
    margin: 5px 0

  .item
    display: flex
    flex-direction: column
    font-size: 0.8em

  .DateStyle,
  .TitleDelay,
  .TitleServiceChange,
  .TitlePlannedWork,
  .plannedWorkDetail
    display: none

.carousel-appear
  opacity: 0.01

.carousel-appear.carousel-appear-active
  opacity: 1
  transition: opacity .5s ease-in
