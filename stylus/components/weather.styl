$red = #FF4136
$blue = #0074D9

.widget-weather
  .error
    padding: 10px
    color: gray

  .currently
    display: flex
    align-items: center

  .temperature, .icon-wrapper
    display: inline-block

  .temperature
    font-size: 5em
    line-height: 1

  .high-low
    margin-top: -10px
    text-align: center
    font-size: 0.85em
    font-weight: bold

    .high
      color: $red

    .low
      color: $blue

  .feelsLike
    font-size: 1.2em

  .weather-icon
    display: inline-block
    width: 4.5em
    height: 4em
    background-size: contain
    background-position: center
    background-repeat: no-repeat

    &.clear-day
      background-image: url(../icons/clear_day.svg)
    &.clear-night
      background-image: url(../icons/clear_night.svg)
    &.cloudy
      background-image: url(../icons/cloudy.svg)
    &.fog
      background-image: url(../icons/fog.svg)
    &.partly-cloudy-day
      background-image: url(../icons/partly_cloudy_day.svg)
    &.partly-cloudy-night
      background-image: url(../icons/partly_cloudy_night.svg)
    &.rain
      background-image: url(../icons/rain.svg)
    &.sleet
      background-image: url(../icons/sleet.svg)
    &.snow
      background-image: url(../icons/snow.svg)
    &.wind
      background-image: url(../icons/wind.svg)

  .weather-week
   display: flex
   flex-direction: row

   .weather-day
     display: flex
     flex-direction: column
     align-items: center
     flex: 1

     .weather-icon
       width: 3.5em
       height: 3em


     .high-low
       font-size: 0.6em
       font-weight: normal

     .day
       text-align: center
       font-size: 0.75em
